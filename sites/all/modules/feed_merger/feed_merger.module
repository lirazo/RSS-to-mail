function _feed_merger_add_form_validate($form, $form_state) {
  //TODO sanitize/normalize user input (ex. user enters URL wihout leading http -> use module canonical_url / nodewords)
  if(isset($form['email']) && !filter_var($form_state['values']['email'], FILTER_VALIDATE_EMAIL)) {
    form_set_error('email', t('Invalid email address.'));
  }
  if(isset($form['password']) && mb_strlen($form_state['values']['password']) < FEED_MERGER_PASSWORD_MIN_SIZE) {
    form_set_error('password', t('Password size should have at least @pwd-size characters.', array('@pwd-size' => FEED_MERGER_PASSWORD_MIN_SIZE)));
  }
  $feedURL = $form_state['values']['url'];
  try {
    Feed::loadRss($feedURL);
  } catch(Exception $e) {
    form_set_error('url', t('Invalid URL. Are you sure %url points to an RSS feed ?', array('%url' => $feedURL)));
  }
}

function _feed_merger_add_form_submit($form, &$form_state) {
//TODO if user is not logged in => create an account if necessary + open up session
  $feedURL = $form_state['values']['url'];
  global $user;
  $feedNode = new StdClass();
  $feedNode->uid = $user->uid;
  $feedNode->type = 'feed';
  $feedNode->title = Feed::loadRss($feedURL)->title;
  $feedNode->field_link[LANGUAGE_NONE][]['url'] = $feedURL;
  node_object_prepare($feedNode);
  node_validate($feedNode, $form, $form_state);
  $errors = form_get_errors();
  if(empty($errors)) {
    node_save($feedNode);
    drupal_set_message(t('Successfully added %url to your feed list.', array('%url' => $feedURL)));
  }
}

function _feed_merger_add_form() {
  //TODO check anti-CSRF token here
  $form['url'] = array(
    '#type' => 'textfield',
    '#default_value' => FEED_MERGER_DEFAULT_URL,
  );
  global $user;
  if($user->uid == 0) {
    $form['email'] = array(
      '#type' => 'textfield',
      '#title' => t('Email'),
    );
    $form['password'] = array(
      '#type' => 'password',
      '#title' => t('Password'),
    );
  }
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Add to my feed list'),
  );
  //TODO checkbox 'remember me'
  return $form;
}

