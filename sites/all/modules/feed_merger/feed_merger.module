function _feed_merger_add_form_validate($form, $form_state) {
  if(isset($form['email']) && !filter_var($form_state['values']['email'], FILTER_VALIDATE_EMAIL)) {
    form_set_error('email', t('Invalid email address'));
  }
  if(isset($form['password']) && mb_strlen($form_state['values']['password']) < FEED_MERGER_PASSWORD_MIN_SIZE) {
    form_set_error('password', t('Password size should have at least') . ' ' . FEED_MERGER_PASSWORD_MIN_SIZE . ' ' . t('characters'));
  }
  try {
    Feed::loadRss($form_state['values']['url']);
  } catch(Exception $e) {
    form_set_error('url', t('Invalid feed URL'));
  }
  //TODO sanitize inputs ?
}

function _feed_merger_add_form_submit($form, &$form_state) {
  $feedNode = new StdClass();
  $feedNode->type = 'feed';
  $feedNode->title = Feed::loadRss($form_state['values']['url'])->title;
  $feedNode->field_link[LANGUAGE_NONE][]['url'] = $form_state['values']['url'];
  node_object_prepare($feedNode);
  node_save($feedNode);
  //TODO if URL already exist, notify user+don't create node
}

function _feed_merger_add_form() {
  //TODO check anti-CSRF token here
  $form['url'] = array(
    '#type' => 'textfield',
    '#default_value' => FEED_MERGER_DEFAULT_URL,
  );
  global $user;
  if($user->uid == 0) {
    $form['email'] = array(
      '#type' => 'textfield',
      '#title' => t('Email'),
    );
    $form['password'] = array(
      '#type' => 'password',
      '#title' => t('Password'),
    );
  }
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Add to my feed list'),
  );
  //TODO checkbox 'remember me'
  return $form;
}

